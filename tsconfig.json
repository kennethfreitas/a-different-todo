{
  "compilerOptions": {
    "listFiles": true,
    "target": "es6",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
			"@core/*": ["core/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		},
  },
  "include": ["src"],
	"exclude": ["node_modules",]
}
